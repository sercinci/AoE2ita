<div class='userCard' data-steam='{{ user.steam_id }}'>
    <div class='card'>
        <div class='pure-u-1-3'>
            <div class='avatarTip'>
                <a href='{{ user.profileurl }}' target='_blank'>
                    <img src='{{ user.avatar }}' alt='{{user.username}}'>
                </a>
            </div>
        </div><!--
        --><div class='pure-u-2-3'>
            <div class='nameScoreTip'>
                <div class='pure-u-1-2'>
                    <div class='name'>
                        <a href='{{ user.profileurl }}' target='_blank'>{{ user.username }}</a>
                        <div class='steamStatus'>
                            <span>stato: <span id='light-{{ user.steam_id }}'>&#9679;</span> <span id='stText-{{ user.steam_id }}'>offline</span></span>
                        </div>
                    </div>
                </div><!--
                --><div class='pure-u-1-2'>
                    <div class='score'>
                        <span>{{ user.first_position * 3 + user.second_position * 2 + user.third_position * 1 }}</span>
                        <img src='/assets/images/cup.png' alt='score'>
                    </div>
                </div><!--
                --><div class='pure-u-1-2'>
                    <label>DM</label>: <span>{{ user.mmr_dm }}</span>
                </div><!--
                --><div class='pure-u-1-2'>
                    <label>RM</label>: <span>{{ user.mmr_rm }}</span>
                </div>  
            </div>            
        </div>
    </div>
    <div class='data'>
        <div class='pure-u-1-2'>
            <span>Partite totali: {{ user.games }}</span>
            <span>Tornei giocati: {{ user.t_completed }}</span>
            <span>Tornei creati: {{ user.t_created }}</span>
        </div><!--
        --><div class='pure-u-1-2'>
            <a href='{{ user.profileurl }}' target='_blank' class='pure-button'>guarda su <h4>steam</h4></a>
        </div>
    </div>
</div>